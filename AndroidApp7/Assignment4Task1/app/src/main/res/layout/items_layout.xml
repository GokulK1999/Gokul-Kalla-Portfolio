<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fee0dd">

            <ImageView
                android:id="@+id/imageViewitem"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:src="@drawable/taylor_swift"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="5dp"
                android:contentDescription="@string/taylorcover"/>

            <TextView
                android:id="@+id/textViewitem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/taylor_swift_the_eras_tour"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewitem"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/textViewitem3"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"/>



            <TextView
                android:id="@+id/textViewitem3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_29_mar"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#965f67"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewitem"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="67dp"/>


            <TextView
                android:id="@+id/textViewitem5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/national_stadium_singapore"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewitem"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageViewitem2"
                android:layout_marginEnd="2dp"/>


            <ImageView
                android:id="@+id/imageViewitem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                app:layout_constraintTop_toBottomOf="@+id/textViewitem3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="10dp"
                android:contentDescription="@string/taylorcover"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>













































