<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    
    <ImageView
        android:id="@+id/clover_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/room5_icon"
        android:contentDescription="@string/heritage"/>
    
    <TextView
        android:id="@+id/clover_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clover_apartment"
        app:layout_constraintLeft_toRightOf="@+id/clover_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/clover_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pin"
        app:layout_constraintLeft_toRightOf="@id/clover_image"
        app:layout_constraintTop_toBottomOf="@id/clover_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/location1"/>

    <TextView
        android:id="@+id/clover_locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/east_west_coast"
        app:layout_constraintLeft_toRightOf="@+id/clover_location"
        app:layout_constraintTop_toBottomOf="@+id/clover_text"
        android:layout_marginTop="8dp"
        android:textColor="@color/Red"/>

    <ImageView
        android:id="@+id/clover_rate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rate"
        app:layout_constraintLeft_toRightOf="@+id/clover_image"
        app:layout_constraintTop_toBottomOf="@+id/clover_location"
        android:contentDescription="@string/rateimage"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/clover_rateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2_stars"
        app:layout_constraintLeft_toRightOf="@+id/clover_rate"
        app:layout_constraintTop_toBottomOf="@+id/clover_location"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/_1d229b"/>

    <TextView
        android:id="@+id/clover_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rm_200"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/_1d229b"
        android:textStyle="bold"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>





















